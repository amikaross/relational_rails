<%= form_with url: "/books/#{@book.id}", method: :patch, local: true do |form| %>
  <%= form.label(:title, "Title:") %><br>
  <%= form.text_field(:title, value: @book.title) %><br>
  <%= form.label(:genre, "Genre:") %><br>
  <%= form.text_field(:genre, value: @book.genre) %><br>
  <%= form.label(:word_count, "Word Count:") %><br>
  <%= form.text_field(:word_count, value: @book.word_count) %><br>
  <%= form.label(:part_of_series, "Part of Series:") %><br>
  <%= form.select(:part_of_series, [["True", true], ["False", false]], selected: @book.part_of_series) %><br><br>
  <%= form.submit("Update") %>
<% end %>