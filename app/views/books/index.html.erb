<h1>List of Books</h1>

<% @books.each do |book| %>
  <h3><a href="/books/<%= book.id %>"><%= book.title %></a></h3>
  <p>Author: <%= book.author.name %></p
  <p>Genre: <%= book.genre %></p>
  <p>Part of a series: <%= book.part_of_series %></p>
  <p>Word count: <%= book.word_count %></p>
  <p>Log created: <%= book.created_at %></p>
  <p>Log updated: <%= book.updated_at %></p>
  <%= button_to "Update '#{book.title}'", "/books/#{book.id}/edit", method: :get %>
  <%= button_to "Delete '#{book.title}'", "/books/#{book.id}", method: :delete %>
<% end %>