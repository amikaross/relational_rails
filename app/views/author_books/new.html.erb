<%= form_with url: "/authors/#{@author.id}/books", method: :post, local: true do |form| %>
  <%= form.label(:title, "Title:") %><br>
  <%= form.text_field(:title) %><br>
  <%= form.label(:genre, "Genre:") %><br>
  <%= form.text_field(:genre) %><br>
  <%= form.label(:word_count, "Word Count:") %><br>
  <%= form.text_field(:word_count) %><br>
  <%= form.label(:part_of_series, "Part of Series:") %><br>
  <%= form.select(:part_of_series, [["True", true], ["False", false]]) %><br><br>
  <%= form.submit("Create Book") %>
<% end %>