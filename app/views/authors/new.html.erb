<%= form_with url: "/authors", method: :post, local: true do |form| %>
  <%= form.label(:name, "Name:") %><br>
  <%= form.text_field(:name) %><br>
  <%= form.label(:dob_year, "Year Born:") %><br>
  <%= form.text_field(:dob_year) %><br>
  <%= form.label(:country, "Country:") %><br>
  <%= form.text_field(:country) %><br>
  <%= form.label(:active, "Currently Active:") %><br>
  <%= form.select(:active, [["True", true], ["False", false]]) %><br><br>
  <%= form.submit("Create Author") %>
<% end %>